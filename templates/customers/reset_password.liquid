{% comment %}
----------------------------------------------------------------------------
  Template: Reset password
  - Reset password form accessed from reset password email.
----------------------------------------------------------------------------
{% endcomment %}
<div class="container">
  <div class="row">
    <div class="col xs12 m6 offset-m3">
      <h1 class="template-account__title h2">
        {{ 'customer.reset_password.title' | t }}
      </h1>

      <p class="template-account__subtitle">
        {{ 'customer.reset_password.subtext' | t: email: email }}
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col xs12 m6 offset-m3">
      {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}

        <div class="form-group">
          <div class="form-group__field">
            <label class="form-group__label subtitle-2" for="ResetPassword">
              {{ 'customer.reset_password.password' | t }}
            </label>

            <input
              id="ResetPassword"
              {% if form.errors contains 'password' %}
                class="input-error"
              {% endif %}
              name="customer[password]"
              placeholder="{{ 'customer.reset_password.password' | t }}"
              type="password"
            >
          </div>

          <div class="form-group__field">
            <label class="form-group__label subtitle-2" for="PasswordConfirmation">
              {{ 'customer.reset_password.password_confirm' | t }}
            </label>

            <input
              id="PasswordConfirmation"
              {% if form.errors contains 'password_confirmation' %}
                class="input-error"
              {% endif %}
              name="customer[password_confirmation]"
              placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
              type="password"
            >
          </div>

          <div class="form-group__footer">
            <input
              class="button button--primary button--dark"
              type="submit"
              value="{{ 'customer.reset_password.submit' | t }}"
            >
          </div>
        </div>
      {% endform %}
    </div>
  </div>
</div>
