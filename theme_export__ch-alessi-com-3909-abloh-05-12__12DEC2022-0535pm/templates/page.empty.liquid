{% comment %}
----------------------------------------------------------------------------
  Template: Page
  - Basic Shopify page.
----------------------------------------------------------------------------
{% endcomment %}

{% assign content = page.content
  | replace: '<p><span>', '<p>'
  | replace: '<p><img', '<img'
  | replace: '</span></p>', '</p>'
  | replace: '></p>', '>'
  | replace: '480x480', '1024x1024'
%}

{% if content contains '##CITE##' %}
  {% assign content = content
    | replace: '##CITE##', '<cite>'
    | replace: '</blockquote>', '</cite></blockquote>'
  %}
{% endif %}

<div class="template-page">
  <div class="container template-page__container page-row">
    <div class="row no-gutter">
      <div class="template-page__column col xs12 m8 offset-m2">
        <h1 class="template-page__title d1">{{ page.title }}</h1>

        <div class="rte">
          {{ content }}
        </div>
      </div>
    </div>
  </div>
</div>