{% style %}
  /* Flexbox
  // ================================================== */
  .d--f  { display: flex; }
  .d--if { display: inline-flex; }

  /* Flex direction */
  .fd--r  { flex-direction: row; } /* Default */
  .fd--rr { flex-direction: row-reverse; }
  .fd--c  { flex-direction: column; }
  .fd--cr { flex-direction: column-reverse; }


  /* Flex wrap */
  .fw--n  { flex-wrap: nowrap; } /* Default */
  .fw--w  { flex-wrap: wrap; }
  .fw--wr { flex-wrap: wrap-reverse; }


  /* Justify content */
  .jc--fe { justify-content: flex-end; }
  .jc--fs { justify-content: flex-start; } /* Default */
  .jc--c  { justify-content: center; }
  .jc--sa { justify-content: space-around; }
  .jc--sb { justify-content: space-between; }


  /* Align items */
  .ai--fs { align-items: flex-start; }
  .ai--c  { align-items: center; }
  .ai--fe { align-items: flex-end; }
  .ai--s  { align-items: stretch; } /* Default */
  .ai--b  { align-items: baseline; }


  /* Flex grow */
  .fg--0 { flex-grow: 0; } /* Default */
  .fg--1 { flex-grow: 1; }


  /* Flex shrink */
  .fs--0 { flex-shrink: 0; }
  .fs--1 { flex-shrink: 1; } /* Default */


  /* Flex basis */
  .fb--a { flex-basis: auto; } /* Default */
  .fb--0 { flex-basis: 0; }


  /* Align self */
  .as--a  { align-self: auto; } /* Default */
  .as--fs { align-self: flex-start; }
  .as--c  { align-self: center; }
  .as--fe { align-self: flex-end; }
  .as--s  { align-self: stretch; }
  .as--b  { align-self: baseline }

  /* Columns 
  ================================================== */

  /* Mobile < 768px */
  .d--f > .xs--12 { flex: 0 0 var(--f12) }  
  .d--f > .xs--6 { flex: 0 0 var(--f6) }  
  .d--f > .xs--4 { flex: 0 0 var(--f4) }  
  .d--f > .xs--3 { flex: 0 0 var(--f3) } 

  /* Medium > 768px */
  @media (min-width: 769px) {
    .d--f > .m--12 { flex: 0 0 var(--f12) }  
    .d--f > .m--6 { flex: 0 0 var(--f6) }  
    .d--f > .m--4 { flex: 0 0 var(--f4) }  
    .d--f > .m--3 { flex: 0 0 var(--f3)} 
  }

  /* Large >= 1024px */
  @media (min-width: 1024px) {
    .d--f > .l--12 { flex: 0 0 var(--f12) }  
    .d--f > .l--6 { flex: 0 0 var(--f6) }  
    .d--f > .l--4 { flex: 0 0 var(--f4) }  
    .d--f > .l--3 { flex: 0 0 var(--f3) } 
  }
{% endstyle %}