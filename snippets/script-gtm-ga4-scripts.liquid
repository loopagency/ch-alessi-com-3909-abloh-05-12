              ],
             value: value,
            };
           dataLayer.push(data);
     if(pop){
       loop_cart_content.splice(index, 1);
     }
     return value;
  }

  function change_loop_cart(line, quantity){
    var event_name = '';
    var product = loop_cart_content[line];
