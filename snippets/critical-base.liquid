    .d1 {
      font-size: var(--ms-7);
    }

    h1 {
      font-size: var(--ms-4);
    }

    h2 {
      font-size: var(--ms-3);
    }

    .h3,
    h3 {
      font-size: var(--ms-2);
    }

    .subtitle-1 {
      font-size: var(--ms-0);
    }

    .subtitle-2 {
      font-size: var(--ms-minus-1);
    }

    p {
      font-size: var(--ms-0);
    }

    label {
      font-size: var(--ms-minus-1);
    }

    ul {
      font-size: var(--ms-0);
    }
