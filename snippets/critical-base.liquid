  html {
    height: 100%;
    font-size: var(--ms-0);
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    line-height: var(--line-height-body);
    text-rendering: optimizeLegibility;
    -webkit-text-size-adjust: 100%;
